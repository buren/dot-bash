#!/bin/bash

_run_cloc() {
  local clocsourcepath='https://gist.github.com/buren/1c6f5f59e5d1ae2c1516/raw/3d6748ca12750d901a965e412e7806204007c631/cloc'
  local filepath="$HOME/.buren/bin/_cloc"
  if [[ ! -f $filepath ]]; then
    echo 'cloc not installed, installing..'
    curl -L $clocsourcepath > $filepath
    chmod +x $filepath
  fi
  $filepath "$@"
}

_run_cloc "$@"
